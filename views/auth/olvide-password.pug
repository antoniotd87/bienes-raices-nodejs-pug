extends ../layout/index
block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow 
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Tu email
                        input(type="text" placeholder="Tu email" name="email")#email.px-3.py-2.border.border-gray-300.w-full.placeholder-gray-400
                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-sm") ¿Ya tienes cuenta? Iniciar Sesion
                        a(href="/auth/registro" class="text-gray-500 text-sm") ¿No tienes cuenta? Registrate
                    input(class="text-center w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")